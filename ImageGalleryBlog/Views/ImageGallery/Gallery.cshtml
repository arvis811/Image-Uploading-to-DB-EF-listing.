@model List<ImageGalleryBlog.ImageGallery>

@{
    ViewBag.Title = "Gallery";
}

<h2>Gallery</h2>

<p>
    @Html.ActionLink("Upload New", "Upload")
</p>
<table class="table">
    @{ 
        for (int i = 0; i < Model.Count(); i += 4)
        {
            int j = 0;
            <tr>
                @while (j < i+4 && j < Model.Count())
                {
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData, 0, Model[j].ImageData.Length)" width="100"/>
                    </td>
                    j++;
                }
            </tr>
        }
    }
</table>
